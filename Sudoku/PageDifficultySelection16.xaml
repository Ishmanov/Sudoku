<Page x:Class="Sudoku.PageDifficultySelection16"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sudoku"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="450"
      Title="Difficulty Selection 16x16"
      FontFamily="Segoe UI">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="5" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9B59B6"/>
                                <!-- Фиолетовый оттенок для 16x16 -->
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#9B59B6"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#ECF0F1">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Судоку 16x16" FontSize="26" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Выберите сложность" FontSize="20" Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <!-- Используем ID 4, 5, 6 для сложностей 16x16 -->
            <Button Content="Лёгкая (16x16)" Click="Button_Easy_Click"/>
            <Button Content="Средняя (16x16)" Click="Button_Medium_Click"/>
            <Button Content="Сложная (16x16)" Click="Button_Hard_Click"/>

            <Button Content="Назад" Margin="0,30,0,0" Background="#95A5A6" Click="Button_Back_Click"/>
        </StackPanel>
    </Grid>
</Page>