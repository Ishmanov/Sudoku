<Page x:Class="Sudoku.PageLeaderboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sudoku"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="450"
      Title="Leaderboard" Loaded="Page_Loaded"
      FontFamily="Segoe UI">

    <Grid Background="#F5F6FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Таблица лидеров" FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,20,0,10" Foreground="#2C3E50"/>

        <!-- Панель кнопок сложностей -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10">
            <!-- 9x9 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                <TextBlock Text="9x9:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button x:Name="BtnDiff1" Content="Лёгкая" Tag="1" Click="DifficultyButton_Click" Width="80" Margin="5"/>
                <Button x:Name="BtnDiff2" Content="Средняя" Tag="2" Click="DifficultyButton_Click" Width="80" Margin="5"/>
                <Button x:Name="BtnDiff3" Content="Сложная" Tag="3" Click="DifficultyButton_Click" Width="80" Margin="5"/>
            </StackPanel>

            <!-- 16x16 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                <TextBlock Text="16x16:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0" Foreground="#8E44AD"/>
                <Button x:Name="BtnDiff4" Content="Лёгкая" Tag="4" Click="DifficultyButton_Click" Width="80" Margin="5"/>
                <Button x:Name="BtnDiff5" Content="Средняя" Tag="5" Click="DifficultyButton_Click" Width="80" Margin="5"/>
                <Button x:Name="BtnDiff6" Content="Сложная" Tag="6" Click="DifficultyButton_Click" Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>

        <DataGrid x:Name="LeaderboardDataGrid" Grid.Row="2" Margin="20" AutoGenerateColumns="False" 
                  IsReadOnly="True" HeadersVisibility="Column" Background="White" BorderBrush="#BDC3C7">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ранг" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Время" Binding="{Binding Time, StringFormat=mm\\:ss}" Width="100"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="3" Content="В главное меню" Click="BackToMainMenu_Click" 
                Width="200" Height="40" Margin="0,10,0,20" Background="#34495E" Foreground="White"/>
    </Grid>
</Page>