                <TextBox x:Name="TextBlock_3_2" Grid.Row="0" Grid.Column="2"/>
                <TextBox x:Name="TextBlock_4_0" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_4_1" Grid.Row="1" Grid.Column="1"/>
                <TextBox x:Name="TextBlock_4_2" Grid.Row="1" Grid.Column="2"/>
                <TextBox x:Name="TextBlock_5_0" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_5_1" Grid.Row="2" Grid.Column="1"/>
                <TextBox x:Name="TextBlock_5_2" Grid.Row="2" Grid.Column="2"/>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="2" Background="#BDC3C7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox x:Name="TextBlock_3_3" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_3_4" Grid.Row="0" Grid.Column="1"/>
                <TextBox x:Name="TextBlock_3_5" Grid.Row="0" Grid.Column="2"/>
                <TextBox x:Name="TextBlock_4_3" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_4_4" Grid.Row="1" Grid.Column="1"/>
