                <TextBox x:Name="TextBlock_8_2" Grid.Row="2" Grid.Column="2"/>
            </Grid>

            <Grid Grid.Row="4" Grid.Column="2" Background="#BDC3C7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox x:Name="TextBlock_6_3" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_6_4" Grid.Row="0" Grid.Column="1"/>
                <TextBox x:Name="TextBlock_6_5" Grid.Row="0" Grid.Column="2"/>
                <TextBox x:Name="TextBlock_7_3" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_7_4" Grid.Row="1" Grid.Column="1"/>
                <TextBox x:Name="TextBlock_7_5" Grid.Row="1" Grid.Column="2"/>
                <TextBox x:Name="TextBlock_8_3" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_8_4" Grid.Row="2" Grid.Column="1"/>
                <TextBox x:Name="TextBlock_8_5" Grid.Row="2" Grid.Column="2"/>
            </Grid>

            <Grid Grid.Row="4" Grid.Column="4" Background="#BDC3C7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox x:Name="TextBlock_6_6" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_6_7" Grid.Row="0" Grid.Column="1"/>
                <TextBox x:Name="TextBlock_6_8" Grid.Row="0" Grid.Column="2"/>
                <TextBox x:Name="TextBlock_7_6" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_7_7" Grid.Row="1" Grid.Column="1"/>
                <TextBox x:Name="TextBlock_7_8" Grid.Row="1" Grid.Column="2"/>
                <TextBox x:Name="TextBlock_8_6" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_8_7" Grid.Row="2" Grid.Column="1"/>
                <TextBox x:Name="TextBlock_8_8" Grid.Row="2" Grid.Column="2"/>
            </Grid>
        </Grid>
    </Grid>
</Page>