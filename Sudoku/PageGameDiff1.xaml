                <TextBox x:Name="TextBlock_5_3" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_5_4" Grid.Row="2" Grid.Column="1"/>
                <TextBox x:Name="TextBlock_5_5" Grid.Row="2" Grid.Column="2"/>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="4" Background="#BDC3C7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox x:Name="TextBlock_3_6" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_3_7" Grid.Row="0" Grid.Column="1"/>
                <TextBox x:Name="TextBlock_3_8" Grid.Row="0" Grid.Column="2"/>
                <TextBox x:Name="TextBlock_4_6" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_4_7" Grid.Row="1" Grid.Column="1"/>
                <TextBox x:Name="TextBlock_4_8" Grid.Row="1" Grid.Column="2"/>
                <TextBox x:Name="TextBlock_5_6" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="TextBlock_5_7" Grid.Row="2" Grid.Column="1"/>
                <TextBox x:Name="TextBlock_5_8" Grid.Row="2" Grid.Column="2"/>
            </Grid>

            <Grid Grid.Row="4" Grid.Column="0" Background="#BDC3C7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
